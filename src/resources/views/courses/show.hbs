<div class='mt-4'>
    <div id='toast-box'>
        <div class='toast-box toast--success'>
            <div class='toast__icon'>
                <i class='fa-solid fa-circle-check'></i>
            </div>
            <div class='toast__body'>
                <h4 class='toast__title toast--success'>Success</h4>
                <p class='toast__message'>Hiện được thông báo rồi nè!!</p>
            </div>
            <div class='toast__close'>
                <i class='fa-solid fa-xmark'></i>
            </div>
        </div>
    </div>

    <div class='row'>
        <div class='col-lg-3'>
            <button class='button button--blue'>Học ngay</button>
        </div>

        <div class='col-lg-9'>
            <h2>{{course.name}}</h2>
            <iframe
                width='560'
                height='315'
                src='https://www.youtube.com/embed/{{course.videoId}}?si=o6gpHum5dWRIr7nA'
                title='YouTube video player'
                frameborder='0'
                allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share'
                allowfullscreen
            ></iframe>
            <p>{{course.description}}</p>
        </div>
    </div>
</div>