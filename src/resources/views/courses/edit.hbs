<div class='mt-4'>
    <h3>Cập nhật khóa học</h3>
    <form
        class='mt-4'
        method='POST'
        action='/courses/{{course._id}}?_method=PUT'
    >
        <div class='mb-3'>
            <label for='name' class='form-label'>Tên khóa học</label>
            <input
                type='text'
                class='form-control'
                id='name'
                value='{{course.name}}'
                placeholder='Nhập tên khóa học'
                name='name'
            />
        </div>
        <div class='mb-3'>
            <label for='description' class='form-label'>Mô tả</label>
            <textarea
                class='form-control'
                id='description'
                placeholder='Nhập mô tả'
                name='description'
            >{{course.description}}</textarea>
        </div>
        <div class='mb-3'>
            <label for='videoId' class='form-label'>videoId</label>
            <input
                type='text'
                class='form-control'
                id='videoId'
                value='{{course.videoId}}'
                placeholder='Nhập videoId'
                name='videoId'
            />
        </div>
        <div class='mb-3'>
            <label for='level' class='form-label'>Trình độ</label>
            <input
                type='text'
                class='form-control'
                id='level'
                value='{{course.level}}'
                placeholder='Nhập trình độ'
                name='level'
            />
        </div>

        <button type='submit' class='btn btn-primary'>Cập nhật</button>
    </form>
</div>